<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".UserActivity"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="7dp"
            android:src="@drawable/ic_user"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username :"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:textStyle="italic"
                android:layout_marginRight="16dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_custom"
                android:text="Mohammad Khusnul Khuluq"
                android:id="@+id/edtUserName_edit"
                android:hint="Your Awesome Name"
                android:layout_marginBottom="5dp"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telp :"
                android:textStyle="italic"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"/>

            <EditText
                android:id="@+id/edtUserTelp_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="085645027785"
                android:hint="+62xxxxxxxxxxx"
                android:textSize="12sp"
                android:background="@drawable/edittext_custom"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:text="Address :"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purwosari, Pasuruan"
                android:textSize="12sp"
                android:background="@drawable/edittext_custom"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="2"
                android:scrollbars="vertical"
                android:gravity="top|left"
                android:id="@+id/edtUserAddress_edit"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_primary_border_shadow"
                android:textColor="@color/colorWhite"
                android:id="@+id/btn_edit"
                android:text="Ganti"
                android:layout_marginVertical="16dp"
                android:elevation="2dp"
                android:clickable="true"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>